<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/station_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/stationEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/station_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/pv_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label"
        android:textStyle="italic"
        android:layout_below="@+id/stationEditText"/>

    <EditText
        android:id="@+id/pvEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/stationEditText"
        android:hint="@string/pv_placeholder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/hz_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label"
        android:textStyle="italic"
        android:layout_below="@+id/pvEditText"/>
    <EditText
        android:id="@+id/hzEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pvEditText"
        android:hint="@string/hz_placeholder"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/v_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label"
        android:textStyle="italic"
        android:layout_below="@+id/hzEditText"/>
    <EditText
        android:id="@+id/vEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/hzEditText"
        android:hint="@string/v_placeholder"
        android:inputType="numberDecimal"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/fab_margin"
        android:text="@string/di_placeholder"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/label"
        android:textStyle="italic"
        android:layout_below="@+id/vEditText"/>
    <EditText
        android:id="@+id/diEditText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/vEditText"
        android:hint="@string/di_placeholder"
        android:inputType="numberDecimal"/>

</RelativeLayout>